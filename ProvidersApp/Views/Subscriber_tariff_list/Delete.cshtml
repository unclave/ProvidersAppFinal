@model ProvidersApp.Models.subscriber_tariff_list

@{
    ViewBag.Title = "Изменить";
}



<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date)
        </dd>

        <dt>
            ФИО абонента
        </dt>

        <dd>
            @Html.DisplayFor(model => model.subscribers.full_name)
        </dd>

        <dt>
            Название тарифа
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tariffs.name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к записям", "Index")
        </div>
    }
</div>
