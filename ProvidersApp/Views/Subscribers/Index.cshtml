@model IEnumerable<ProvidersApp.Models.subscribers>

@{
    ViewBag.Title = "Абоненты";
}

@using (Html.BeginForm("Index", "Subscribers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="col-md-10">
            <label for="query">
                <input type="text" name="search" class="form-control" />
            </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Найти" class="btn btn-default" />
        </div>
    </div>
}
<br>

<p>
    @Html.ActionLink("Создать запись", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ФИО
        </th>
        <th>
            Номер телефона
        </th>
        <th>
            Адрес
        </th>
        <th>
            Название региона
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.full_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telephone_number)
        </td>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.personal_data.address).ToString(), "Details", "Personal_data", new { id = item.id_personal_data }, null)
        </td>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.regions.name).ToString(), "Details", "Regions", new { id = item.id_region }, null)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробно", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
