@model ProvidersApp.Models.payments

@{
    ViewBag.Title = "Изменить";
}



<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date)
        </dd>

        <dt>
            Сумма платежа
        </dt>

        <dd>
            @Html.DisplayFor(model => model.payment_value)
        </dd>

        <dt>
            Код записи списка подключений
        </dt>

        <dd>
            @Html.DisplayFor(model => model.subscriber_tariff_list.id)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к записям", "Index")
        </div>
    }
</div>
